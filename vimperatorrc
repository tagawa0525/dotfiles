set wildmode=list:full
set complete=l
set defsearch=g
set visualbell
set! ui.key.contentAccess=5
highlight Bell display:none
highlight Hint z-index:5000; font-family:monospace; font-size:16px; color:white; background-color:blue; border-color:ButtonShadow; border-width:0px; border-style:solid; padding:0px 1px 0px 1px; position:absolute;
highlight StatusLine color:black; background:#BBB; font-weight:normal;

noremap  <C-k>  <Nop>
noremap  <BS>   <Nop>
noremap  h      H
noremap  l      L
noremap  <C-p>   <Up>
noremap  <C-n>   <Down>

inoremap <C-f>  <Right>
inoremap <C-b>  <Left>
inoremap <C-p>  <Up>
inoremap <C-n>  <Down>
inoremap <C-l>  <Nop>
inoremap <C-h>  <BS>
inoremap <C-m>  <Enter>

cnoremap <C-f>  <Right>
cnoremap <C-b>  <Left>
cnoremap <C-p>  <Up>
cnoremap <C-n>  <Down>
cnoremap <C-m>  <Retrun>
cnoremap <C-m>  <Enter>

set nextpattern=^次(へ|の|ペ),^続き,\bnext\b,^>$,^(>>|&#187;)$,^(>|&#187;),(>|&#187;)$,\bmore\b
set previouspattern=^前(へ|の|ペ),^戻る,\bprev|previous\b,^<$,^(<<|&#171;)$,^(<|&#171;),(<|&#171;)$

javascript <<EOM
[
  [ 'H',     ':tabmove! -1' ],
  [ 'L',     ':tabmove! +1' ],
  [ 'q',     ':toggleldrc' ],
  [ '<C-h>', ':tabprevious' ],
  [ '<C-l>', ':tabnext' ],
].forEach(function([key, command]){
  liberator.modules.mappings.addUserMap([liberator.modules.modes.NORMAL], [key],
    "use defined mapping",
    function () { liberator.execute(command); },
    {
      rhs: key,
      noremap: true
    });
});
EOM

command! -nargs=+ lazy autocmd VimperatorEnter .* <args>

